<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.learn.java.Application" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
<!--If we do not say what to log, compiler will only log root level log (here error)-->
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>